{
  "tests": [
    {
      "name": "OPTIONS request для CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "POST запрос с ключевыми словами",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "test-user-wordstat"
      },
      "body": {
        "keywords": ["клининг", "уборка квартир"],
        "regions": [213],
        "use_openai": true,
        "selected_intents": ["commercial", "transactional"],
        "region_names": ["Москва"]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST без ключевых слов",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "test-user-wordstat"
      },
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Необходимо указать ключевые слова"
      },
      "bodyMatcher": "partial"
    }
  ]
}